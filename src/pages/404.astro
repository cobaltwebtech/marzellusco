---
import OctagonAlert from "@tabler/icons/filled/alert-octagon.svg";
import Home from "@tabler/icons/filled/home.svg";
import BaseLayout from "@/base/BaseLayout.astro";
import { Button } from "@/components/starwind/button";
---
<BaseLayout title="Page Not Found | Marzellus">
  <section class="mx-auto max-w-2xl px-4 flex flex-col items-center justify-center space-y-4 text-center">
    <OctagonAlert class="text-error size-16" />
    <h1 class="text-4xl font-bold text-warning">Error 404 - Page Not Found</h1>
    <p>Sorry, the page you are looking for does not exist.</p>
    <p>Please check the URL or return to the homepage.</p>
    <Button href="/"><Home class="size-6" />Go Back Home</Button>
  </section>
</BaseLayout>
